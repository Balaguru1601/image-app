<% layout('layout/boilerplate') %>
    <link rel="stylesheet" href="../../public/stylesheets/imagePreview.css">
    <div class="container">
        <h1 class="h2 ms-2 mb-4">New Post: </h1>
        <form action="/images/new" method="post" class="mb-5 needs-validation" enctype="multipart/form-data" novalidate>
            <input type="file" class="form-control" id="imageFile" name="images" required multiple
                onchange="previewMultiple()">
            <div class="row my-4 mx-3" id="img-preview-div"></div>
            <label for="description" class="form-label fw-bold mt-3">Description: </label>
            <input type="text" name="description" id="description" class="form-control" required>
            <div class="valid-feedback">
                Looks good!
            </div>
            <button class="btn btn-outline-secondary mt-3 ms-2 px-3" type="submit">Post</button>
        </form>
    </div>